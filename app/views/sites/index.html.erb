<% content_for :javascript_head do %> 
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=places" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>  
<% end %>

<h1>CONSULTER LES SITES</h1>
<div class="row">
  <div class="col-md-9">
    <ul class="nav nav-pills nav-justified" id="pillSites">
      <li class="filter active"><a href="#liste" data-toggle="pill"><h4 class="glyphicon glyphicon-th-list"></h4></a></li>
      <li class="filter"><a href="#carte" data-toggle="pill"><h4 class="glyphicon glyphicon-globe"></h4></a></li>
    </ul>
    <div class="tab-content">
            <div class="tab-pane active" id="liste">
              <br>
              <% for site in @sites %>
              <div class="the-box-landing border-color-left">
                <div class="row">
                  <div class="col-md-3">
                    <%= image_tag site.photo_url(:thumb).to_s, class: 'img-responsive img-circle'  %>
                  </div>
                  <div class="col-md-6">
                    <h3><%= link_to site.name, site  %></h3>
                    <p><i><%= site.location %></i></p>
                    <span class="hint"><b>Code: </b><%= site.code %> | <b>Créé par: </b><i>en cours...</i></span><br/>
                    <hr>
                    <span><i class="glyphicon glyphicon-user"></i> Ajouter un co-observateur</span> | <span><i class="glyphicon glyphicon-user"></i> Remplir et modifier la fiche de gestion</span>
                  </div>
                  <div class="col-md-3">
                    <% if can? :update, @sites %>
                      <%= link_to  edit_site_path(site), class:'btn btn-info btn-xs' do %>
                        <i class="glyphicon glyphicon-pencil"></i> Modifier
                      <% end %>
                    <% end %>
                    
                    <% if can? :destroy, @sites %>
                     <%= link_to site, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-xs' do %>
                         <i class="glyphicon glyphicon-remove-sign"></i> Supprimer
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
  
                <% end %>
            </div>
            <div class="tab-pane" id="carte">
              <br>
              <div style="width: auto">
                <div id="map" style="width: auto; height: 400px"></div>
              </div>
            </div>
    </div><!-- tab content -->
  </div>
  <div class="col-md-3">
    <%= link_to 'New Site', new_site_path , class: 'btn btn-warning btn-lg pull-right' %>
  </div>
</div>


<script type="text/javascript">

$("#pillSites").on('shown.bs.tab', function() {
  handler = Gmaps.build('Google', { markers: { clusterer: {clusterer_maxZoom: 25} } });
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
});
initialize();
</script>
