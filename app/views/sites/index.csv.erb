<% headers = [
  'site_id',
  'site_code',
  'site_latitude',
  'site_longitude',
  'site_location',
  'site_created_at',
  'site_updated_at',
  'site_gen_freq',
  'site_gen_gest',
  'site_gen_surface',
  'site_gen_obj',
  'site_gestion_date',
  'site_hist_date',
  'site_hist_occsol',
  'site_hist_trav',
  'site_cult_amend',
  'site_cult_amend_freq',
  'site_cult_trav',
  'site_cult_trav_freq',
  'site_cult_trav_freqinfo',
  'site_propage',
  'site_propage_identifier'] %>
<%= CSV.generate_line(headers, {:quote_char=>'"', :row_sep => ''}).html_safe %>
<% @sites.each do |site| %>
  <%= CSV.generate_line([
    site.id,
    site.code,
    site.latitude,
    site.longitude,
    site.location,
    site.created_at,
    site.updated_at,
    site.gen_freq,
    site.gen_gest,
    site.gen_surface,
    site.gen_obj.split('|'),
    site.gestion_date,
    site.hist_date,
    site.hist_occsol,
    site.hist_trav,
    site.cult_amend,
    site.cult_amend_freq,
    site.cult_trav,
    site.cult_trav_freq,
    site.cult_trav_freqinfo,
    site.propage,
    site.propage_identifier], {:quote_char=>'"', :row_sep => ''}).html_safe %>
<% end %>
