<% content_for :javascript_head do %> 
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=places" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>  
<% end %>

<%= simple_form_for(@site, :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' }, :html => {:multipart => true} }) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-4">
      <div class="list-block">
        <%= f.input :code, label: "Code de suivi" %>

        <%= f.input :location, label: "Adresse de la prairie" %>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :latitude, label: "Latitude" %>
          </div>
          <div class="col-md-6">
            <%= f.input :longitude, label: "Longitude" %>
          </div>
          </div>
      </div>
      <% if @site.photo? %>
        <div class="list-block">
            <%= image_tag @site.photo_url(:thumb).to_s  %>
            <%= f.input :photo, label: 'Modifier la photo du site', class: 'btn btn-alert' %>
        </div>
      <% else %>
      <div class="list-block">
        <%= f.input :photo, class: 'btn btn-warning', label: 'Ajouter une photo du site' %>
      </div>
      <% end %>
      <% if @site.plan? %>
        <div class="list-block">
            <%= image_tag @site.plan_url(:thumb).to_s  %>
            <%= f.input :plan, label: 'Modifier le plan du site', class: 'btn btn-alert' %>
        </div>
      <% else %>
      <div class="list-block">
        <%= f.input :plan, class: 'btn btn-warning', label: 'Ajouter un plan du site' %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="list-block">
        <span><p>Saisir une adresse ou un lieu proche de la prairie dans la barre de recherche et sélectionner le lieu qui correspond parmi la liste proposée par le moteur de recherche.</p></span>
        <span><p>Vous pourrez ensuite déplacer le marqueur à l'emplacement précis de la prairie.</p></span>
      </div>
      <input id="pac-input" class="gmcontrols" type="text"
      placeholder="Saisir un lieu ou une adresse">
      <div id="type-selector" class="gmcontrols">
        <input type="radio" name="type" id="changetype-all" checked="checked">
        <label for="changetype-all">Tout</label>

        <input type="radio" name="type" id="changetype-establishment">
        <label for="changetype-establishment">Lieux</label>

        <input type="radio" name="type" id="changetype-geocode">
        <label for="changetype-geocode">Adresses</label>
      </div>
      <div id="map-canvas" style='width: auto; height: 475px;'></div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <%= f.submit 'ENREGISTRER LES MODIFICATIONS', class: 'col-md-12 btn btn-success btn-lg' %>
    </div>
  </div>
<% end %>
<hr>

