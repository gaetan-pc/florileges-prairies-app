<div style="max-width: 75%;" class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Si vous avez déja un compte...</h3>
    <div class="row">
      <div class="col-md-7">
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label "Mot de passe" %>
          <%= f.password_field :password, class: 'form-control' %>
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Mot de passe oublié?", new_password_path(resource_name) %>
          <% end -%>
        </div>
          <%= f.submit 'Me connecter', :class => 'button right' %>
          <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <%= f.check_box :remember_me %> <%= f.label "Se souvenir de moi" %>
            </div>
          <% end -%>
      </div>
      <div style="padding: 50px; text-align: center;"class="col-md-5">
        <div>Pour une première visite:</div>
        <%- if devise_mapping.registerable? %>
          <%= link_to 'Créer un compte', new_registration_path(resource_name), :class => 'button'  %>
        <% end -%>
      </div>
    </div>
  <% end %>
</div>
