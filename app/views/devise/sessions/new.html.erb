<section class="m-0">
  <div
          class="absolute h-full w-full bg-gray-900"
          style='
            background-image: url("https://natureenvilleacergypontoise.files.wordpress.com/2019/03/formation-florilc3a8ges-cergy-31-05-2018-1.jpg");
            background-size: 100%;
            background-repeat: no-repeat;
          '
        >
  </div>
  <div class="container mx-auto px-4 h-full mt-12">
    <div class="flex content-center items-center justify-center h-full">
      <div class="w-full lg:w-4/12 px-4">
        <div
                class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0"
              >
          <div class="rounded-t mb-0 px-6 py-6">
            <div class="text-center mb-3">
              <h6 class="text-gray-600 text-sm font-bold">
                Nouveau sur Floriscope ?
              </h6>
            </div>
            <div class="text-center mt-6">
              <%- if devise_mapping.registerable? %>
                <%= link_to 'Créer un compte', new_registration_path(resource_name), 
                class: 'bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full',
                style: 'transition: all 0.15s ease 0s;'  %>
              <% end -%>
            </div>
            <hr class="mt-6 border-b-1 border-gray-400" />
          </div>
          <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
            <div class="text-gray-500 text-center mb-3 font-bold">
              <small>Si vous avez déja un compte...</small>
            </div>
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
              <div class="relative w-full mb-3">
                <%= f.label :email, 'Adresse électronique', class: 'block uppercase text-gray-700 text-xs font-bold mb-2' %>
                <%= f.email_field :email, :autofocus => false, 
                  class: 'px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full', 
                  style: 'transition: all 0.15s ease 0s;', 
                  placeholder: 'utilisateur@florileges.info' %>
                <div class="relative w-full mb-3">
                  <%= f.label "Mot de passe", class: 'block uppercase text-gray-700 text-xs font-bold mb-2 mt-2' %>
                  <%= f.password_field :password,
                        class: 'px-3 py-3 placeholder-gray-400 text-gray-700 bg-white rounded text-sm shadow focus:outline-none focus:shadow-outline w-full',
                        style: 'transition: all 0.15s ease 0s;'
                    %>
                </div>
                <div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="inline-flex items-center cursor-pointer">
                      <%= f.check_box :remember_me, class: 'form-checkbox text-gray-800 ml-1 w-5 h-5', style: 'transition: all 0.15s ease 0s;' %>
                      <%= f.label "Se souvenir de moi", class: 'ml-2 mt-2 text-sm font-semibold text-gray-700' %>
                    </div>
                  <% end -%>
                </div>
                <div class="text-center mt-6">
                  <%= f.submit 'Me connecter', 
                    class: 'bg-gray-900 text-white active:bg-gray-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 w-full',
                    style: 'transition: all 0.15s ease 0s;'%>
                </div>
              <% end %>
            </div>
          </div>
          <div class="flex flex-wrap mt-6 mb-6">
            <div class="w-full">
              <a href="#pablo" class="text-gray-300"><small>Mot de passe oublié?</small></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
