<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Cr√©er un compte</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label "Nom" %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :structure %>
      <%= f.text_field :structure, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :fonction %>
      <%= f.text_field :fonction, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "Mot de passe" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label "Confirmer le mot de passe" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
     <%= f.submit "M'enregistrer", :class => 'button right' %>
  <% end %>
</div>
